{% extends 'base.html.twig' %}

{% block title %}Hello CreerFicheController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Saisie</h2>

<form method="POST" action="/creerFiche">
    <p>
        <label for="mois">Mois</label>
        <input id="mois" type="number" name="mois" size="2" max="12">
    </p>
    <p>
        <label for="annee">Année</label>
        <input id="annee"  type="number"  name="annee" size="4" max="9999">
    </p>


    <h2>Frais au forfait</h2>


    <p>
        <label for="repas">Repas midi</label>
        <input id="repas" type="number" name="repas"  size="2" max="99">
    </p>
    <p>
        <label for="nuit">Nuitées</label>
        <input id="nuit"  type="number"  name="nuit" size="2" max="99">
    </p>
    <p>
        <label for="etape">Etape</label>
        <input id="etape"  type="number"  name="etape" size="2" max="99">
    </p>
    <p>
        <label for="km">Km</label>
        <input id="km"  type="number"  name="km" size="2" max="99">
    </p>


    <h2>Hors Forfait</h2>


    <p>
        <label for="date">Date</label>
        <input id="date" type="date" name="date"  size="30" maxlength="45">
    </p>
    <p>
        <label for="libelle">Libelle</label>
        <input id="libelle"  type="text"  name="libelle" size="30" maxlength="45">
    </p>
    <p>
        <label for="quantite">Qté</label>
        <input id="quantite"  type="number"  name="quantite" size="30" maxlength="45">
    </p>


    <h2>Hors Classification</h2>


    <p>
        <label for="nbreJustificatif">Nombre Justificatifs</label>
        <input id="nbreJustificatif" type="number" name="nbreJustificatif"  size="30" maxlength="45">
    </p>
    <p>
        <label for="montantTotal">Montant total</label>
        <input id="montantTotal"  type="number"  name="montantTotal" size="30" maxlength="45">
    </p>

    <p>
        <input type="reset" value="Effacer" name="effacer"> 
        <input type="submit" value="Envoyer" name="envoyer">
    </p>
</form>


{% endblock %}
